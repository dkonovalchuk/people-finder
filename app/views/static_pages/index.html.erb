<div class="row">
  <div class="col-md-12">

    <div class="row">
      <div class="col-md-6">
        <div class="well bs-component">
          <form role="form" action="<%= api_find_path %>">
            <fieldset>
              <legend>Search person</legend>
              <div class="form-group">
                <label for="exampleInputEmail1">Email</label>
                <input type="email" name="email" class="form-control" id="exampleInputEmail1" placeholder="Email">
              </div>
              <div class="form-group">
                <label for="exampleInputPassword1">Name</label>
                <input type="text" name="name" class="form-control" id="exampleInputPassword1" placeholder="Name">
              </div>
              <button type="submit" class="btn btn-default">Search</button>
            </fieldset>
          </form>
        </div>
      </div>
    </div>


    <h3>Listing persons</h3>

    <%= will_paginate(@persons) %>

    <table class="table table-striped table-hover ">
      <thead>
        <tr>
          <th>Email</th>
          <th>Name</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @persons.each do |person| %>
          <tr>
            <td class="col-md-4"><%= person["email"] %></td>
            <td class="col-md-4"><%= person["name"] %></td>
            <td class="col-md-4"><%= link_to("Check", api_find_path(email: person["email"], name: person["name"])) %></td>
          </tr>
        <% end%>
      </tbody>
    </table>

    <%= will_paginate(@persons) %>
  </div>
</div>
